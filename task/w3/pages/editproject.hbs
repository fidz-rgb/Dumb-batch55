<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="../assets/css/style.css" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <link rel="stylesheet" href="../assets/css/project-form.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
    <title>Edit Project</title>
</head>
<body>
    {{!-- navbar --}}
    <div class="container">
      <nav class="navbar">
        <div class="navbar-left">
          <img src="../assets/img/dumbways.png" alt="dumbways" />
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/myproject">My Project</a></li>
            <li><a href="/testimonial">Testimonials</a></li>
          </ul>
        </div>
        <div class="navbar-right">
          <a href="/contact">Contact Me</a>
          <i
              class="fa-solid fa-bars"
              id="burger-button"
              onclick="openBurger()"
            ></i>
        </div>
      </nav>
      <div class="burger" id="burger">
        <a href="/">Home</a>
        <a href="/myproject">My Project</a>
        <a href="/contact">Contact Me</a>
        <a href="/testimonial">Testimonials</a>
      </div>
    </div>

    {{!-- project form --}}
    <div class="project">
        <form method="post" action="/editproject">
          <h1>EDIT PROJECT</h1>
          <input value="{{data.id}}" name="id" hidden>
          <label for="name">Project Name</label>
          <input type="text" id="name" name="title" value="{{data.title}}"/>
          <div class="tgl">
            <div class="start">
              <label for="start-d">Start Date</label><br />
              <input type="date" id="start-d" name="start-d" />
            </div>
            <div class="end">
              <label for="end-d">End Date</label><br />
              <input type="date" id="end-d" name="end-d" />
            </div>
          </div> 
          <label for="content">Content</label>
          <textarea name="content" id="content" name="content">{{data.content}}</textarea>
          <div class="check">
            <label for="skill">Skill</label><br />
            <div class="check1">
              <input class="tech" type="checkbox" value="Node Js" id="nodejs" />
              <label for="nodejs">Node Js</label><br />
              <input class="tech" type="checkbox" value="React Js" id="react" />
              <label for="react">React Js</label><br />
            </div>
            <div class="check2">
              <input class="tech" type="checkbox" value="Next Js" id="nextjs" />
              <label for="nextjs">Next Js</label><br />
              <input class="tech" type="checkbox" value="TypeScript" id="typescript"/>
              <label for="typescript">Typescript</label><br />
            </div>
          </div>
          <label for="upload">Upload Image</label>
          <input type="file" id="upload" class="upload" />
          <button class="submit-button" type="submit" onclick="handleProject(event)">
            Edit
          </button>
        </form>
      </div>
    </div>
    <script src="../assets/js/navbar.js"></script>
</body>
</html>