<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../assets/css/style.css" />
    <link rel="stylesheet" href="../assets/css/nav.css" />
    <link rel="stylesheet" href="../assets/css/contact-form.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <title>Contact</title>
  </head>
  <body>
    <div class="container">
      <nav class="navbar">
        <div class="navbar-left">
          <img src="../assets/img/dumbways.png" alt="dumbways" />
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/myproject">My Project</a></li>
            <li><a href="/testimonial">Testimonials</a></li>
          </ul>
        </div>
        <div class="navbar-right">
          <a href="/contact">Contact Me</a>
          <i
              class="fa-solid fa-bars"
              id="burger-button"
              onclick="openBurger()"
            ></i>
        </div>
      </nav>
      <div class="burger" id="burger">
        <a href="/">Home</a>
        <a href="/myproject">My Project</a>
        <a href="/contact">Contact Me</a>
        <a href="/testimonial">Testimonials</a>
      </div>
    </div>
      <div class="contact">
        <form method="POST">
          <h1>GET IN TOUCH</h1>
          <label for="name">Name</label>
          <input type="text" id="name" />
          <label for="email">Email</label>
          <input type="email" id="email" />
          <label for="phone">Phone Number</label>
          <input type="text" id="phone" />
          <label for="subject">Subject</label>
          <select name="" id="subject">
            <option value="" disabled selected hidden>Choose subject :</option>
            <option value="frontend">Frontend Developer</option>
            <option value="backend">Backend Developer</option>
            <option value="fullstack">Fullstack Developer</option>
            <option value="ai">AI Engineer</option>
            <option value="data">Database Administrator</option>
          </select>
          <label for="message">Message</label>
          <textarea name="message" id="message"></textarea>
          <button class="submit-button" onclick="submitHandler()">
            Submit
          </button>
        </form>
      </div>
    </div>
    <!-- Javascript -->
    <script src="../assets/js/contact.js"></script>
    <script src="../assets/js/navbar.js"></script>
  </body>
</html>
