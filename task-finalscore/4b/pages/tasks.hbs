<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Task</title>
  </head>
  <body class="bg-primary-subtle">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold me-5" href="#">FinalPro</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="collections">Collections</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active fw-semibold" href="tasks">Tasks</a>
            </li>
            <button
              type="button"
              class="btn btn-dark position-absolute top-50 end-0 translate-middle-y"
              style=" margin-right:12px;"
            >Login</button>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container my-5 top-50 start-50 bg-body-tertiary border-start">
      <div class="content p-3">
        <h1 class="mb-4">List Task
          <a href="./task-add" class="btn btn-dark ms-2">Add</a>
        </h1>
        {{#each data}}
          <div class="card d-inline-flex me-3 mb-3" style="width: 18rem;">
            <div class="card-header">
              <h5>{{id}}: {{name}}</h5>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">ID Collection: {{collection_id}}</li>
              <li class="list-group-item">Status: {{is_done}}</li>
              <li class="list-group-item d-flex justify-content-center">
                <form method="" action="/task-ed/{{id}}">
                  <button type="submit" class="btn btn-dark me-2">Edit</button>
                </form>
                <form method="post" action="/task-del/{{id}}">
                  <button type="submit" class="btn btn-dark">Delete</button>
                </form>
              </li>
            </ul>
          </div>
        {{/each}}
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>